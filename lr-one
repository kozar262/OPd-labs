from bs4 import BeautifulSoup
import requests

def get_faculties():
    url = 'https://omgtu.ru/general_information/faculties/'  # страница с факультетами
    response = requests.get(url)
    soup = BeautifulSoup(response.text, 'html.parser')

    faculties = soup.find_all('div', class_='faculty-block')  # ищем блоки факультетов
    with open('faculties.txt', 'w', encoding='utf-8') as f:
        for faculty in faculties:
            name = faculty.find('a').text.strip()
            f.write(name + '\n')

if name == '__main__':
    get_faculties()
